generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// datasource db {
//   provider = "postgresql"
// }
model User {
  id             Int    @id @default(autoincrement())
  email          String @unique
  about          String @default("")
  name           String
  profilePicture String @default("")
  sentMessages Messages[] @relation("sentMessages")
  recievedMessages Messages[] @relation("recievedMessages")
  outgoingCallLogs CallLog[] @relation("caller")
  incomingCallLogs CallLog[] @relation("callee")
}
model Messages{
  id Int @id @default(autoincrement())
  sender User @relation("sentMessages",fields:[senderId],references: [id])
  senderId Int
  reciever User @relation("recievedMessages",fields:[recieverId],references: [id])
  recieverId Int
  type String @default("text")
  message String
  messageStatus String @default("sent")
  createdAt DateTime @default(now())
}

model CallLog {
  id         Int      @id @default(autoincrement())
  caller     User     @relation("caller", fields: [callerId], references: [id])
  callerId   Int
  callee     User     @relation("callee", fields: [calleeId], references: [id])
  calleeId   Int
  direction  String   // "outgoing" or "incoming" relative to caller
  callType   String   // "voice" or "video"
  status     String   // "answered" | "missed" | "rejected" | "ended"
  createdAt  DateTime @default(now())
}